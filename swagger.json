  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Products",
      "description": "API for product model"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/admin/addHamburger": {
      "post": {
        "tags": [
          "Products"
        ],
        "description": "Create new product model in database",
        "parameters": [
          {
            "name": "Hamburger",
            "in": "body",
            "description": "Model that we want to create",
            "schema": {
              "$ref": "#/definitions/Hamburger"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New model is created",
            "schema": {
              "$ref": "#/definitions/Hamburger"
            }
          }
        }
      }
    },
    "/admin/deleteDrinks": {
      "parameters": [
        {
          "name": "Drink title",
          "in": "path",
          "required": true,
          "description": "Title of model that we want to delete",
          "type": "string"
        }
      ],
      "delete": {
        "summary": "Delete drink with given title",
        "tags": [
          "Products"
        ],
        "responses": {
          "200": {
            "description": "Model is deleted",
            "schema": {
              "$ref": "#/definitions/Drink"
            }
          }
        }
      }
    }
  },


  "definitions": {
    "Hamburger": {
      "required": [
        "hamburgerTitle",
        "hamburgerPrice",
        "hamburgerImg"
      ],
      "properties": {
        "hamburgerTitle": {
          "type": "string"
        },
        "hamburgerPrice": {
          "type": "string"
        },
        "hamburgerImg": {
          "type": "string"
        }
      }
    },
    "Drink": {
      "required": [
        "drinksTitle",
        "drinksPrice"
      ],
      "properties": {
        "drinksTitle": {
          "type": "string"
        },
        "drinksPrice": {
          "type": "string"
        }
      }
    }
  }
